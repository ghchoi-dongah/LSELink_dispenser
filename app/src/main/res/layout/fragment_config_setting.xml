<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1024dp"
    android:layout_height="768dp"
    tools:context=".pages.ConfigSettingFragment">

    <TextView
        android:id="@+id/textViewChargePointType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        android:text="@string/chargePointType"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/spinnerChargePointType"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:dropDownWidth="300dp"
        android:spinnerMode="dropdown"
        android:theme="@style/SpinnerTheme"
        android:background="@drawable/spinner_background"
        app:layout_constraintTop_toTopOf="@id/textViewChargePointType"
        app:layout_constraintStart_toEndOf="@id/textViewChargePointType" />

    <TextView
        android:id="@+id/textViewChargePointModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/chargePointModel"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/textViewChargePointType"
        app:layout_constraintTop_toBottomOf="@id/textViewChargePointType" />

    <Spinner
        android:id="@+id/spinnerChargePointModel"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:dropDownWidth="300dp"
        android:spinnerMode="dropdown"
        android:theme="@style/SpinnerTheme"
        android:background="@drawable/spinner_background"
        app:layout_constraintTop_toTopOf="@id/textViewChargePointModel"
        app:layout_constraintStart_toStartOf="@id/spinnerChargePointType" />

    <TextView
        android:id="@+id/textViewChargeBoxSerialNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/chargeBoxSerialNumber"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/textViewChargePointType"
        app:layout_constraintTop_toBottomOf="@id/textViewChargePointModel" />

    <EditText
        android:id="@+id/editChargeBoxSerialNumber"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text_disabled"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewChargeBoxSerialNumber"
        app:layout_constraintStart_toStartOf="@id/spinnerChargePointType"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewChargerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/chargerId"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/textViewChargePointType"
        app:layout_constraintTop_toBottomOf="@id/textViewChargeBoxSerialNumber" />

    <EditText
        android:id="@+id/editChargerId"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text_disabled"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewChargerId"
        app:layout_constraintStart_toStartOf="@id/spinnerChargePointType"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewServerUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/serverUrl"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/textViewChargePointType"
        app:layout_constraintTop_toBottomOf="@id/textViewChargerId" />

    <EditText
        android:id="@+id/editServerUrl"
        android:layout_width="768dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text_required"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewServerUrl"
        app:layout_constraintStart_toStartOf="@id/spinnerChargePointType"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewServerPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/serverPort"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/textViewChargePointType"
        app:layout_constraintTop_toBottomOf="@id/textViewServerUrl" />

    <EditText
        android:id="@+id/editServerPort"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text_required"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewServerPort"
        app:layout_constraintStart_toStartOf="@id/spinnerChargePointType"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewControlPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/controlPort"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/textViewChargePointType"
        app:layout_constraintTop_toBottomOf="@id/textViewServerPort" />

    <EditText
        android:id="@+id/editControlPort"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text_required"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewControlPort"
        app:layout_constraintStart_toStartOf="@id/spinnerChargePointType"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewRfPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/rfPort"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/textViewChargePointType"
        app:layout_constraintTop_toBottomOf="@id/textViewControlPort" />

    <EditText
        android:id="@+id/editRfPort"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text_required"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewRfPort"
        app:layout_constraintStart_toStartOf="@id/spinnerChargePointType"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewCreditCardPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/creditCardPort"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/textViewChargePointType"
        app:layout_constraintTop_toBottomOf="@id/textViewRfPort" />

    <EditText
        android:id="@+id/editCreditCardPort"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text_required"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewCreditCardPort"
        app:layout_constraintStart_toStartOf="@id/spinnerChargePointType"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewTestPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/testPrice"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/textViewChargePointType"
        app:layout_constraintTop_toBottomOf="@id/textViewCreditCardPort" />

    <EditText
        android:id="@+id/editTestPrice"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text_required"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewTestPrice"
        app:layout_constraintStart_toStartOf="@id/spinnerChargePointType"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewSoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/soc"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/textViewChargePointType"
        app:layout_constraintTop_toBottomOf="@id/textViewTestPrice" />

    <EditText
        android:id="@+id/editSoc"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text_required"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewSoc"
        app:layout_constraintStart_toStartOf="@id/spinnerChargePointType"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewConnectorPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/connectorPriority"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/textViewChargePointType"
        app:layout_constraintTop_toBottomOf="@id/textViewSoc" />

    <EditText
        android:id="@+id/editConnectorPriority"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text_required"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewConnectorPriority"
        app:layout_constraintStart_toStartOf="@id/spinnerChargePointType"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewChargePointSerialNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/chargePointSerialNumber"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/editChargePointSerialNumber"
        app:layout_constraintTop_toTopOf="@id/textViewChargePointType" />

    <EditText
        android:id="@+id/editChargePointSerialNumber"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:background="@drawable/selector_edit_text_required"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewChargePointSerialNumber"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewChargePointVendor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:text="@string/chargePointVendor"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/editChargePointVendor"
        app:layout_constraintTop_toBottomOf="@id/textViewChargePointSerialNumber" />

    <EditText
        android:id="@+id/editChargePointVendor"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text_required"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewChargePointVendor"
        app:layout_constraintStart_toStartOf="@id/editChargePointSerialNumber"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewMid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/mid"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/editMid"
        app:layout_constraintTop_toTopOf="@id/textViewChargeBoxSerialNumber" />

    <EditText
        android:id="@+id/editMid"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text_required"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewMid"
        app:layout_constraintStart_toStartOf="@id/editChargePointSerialNumber"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewFirmwareVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:text="@string/firmwareVersion"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/editFirmwareVersion"
        app:layout_constraintTop_toBottomOf="@id/textViewMid" />

    <EditText
        android:id="@+id/editFirmwareVersion"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text_required"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewFirmwareVersion"
        app:layout_constraintStart_toStartOf="@id/editChargePointSerialNumber"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewKeyboardControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/keyboardControl"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/btnKeyboardControl"
        app:layout_constraintTop_toTopOf="@id/btnKeyboardControl"
        app:layout_constraintBottom_toBottomOf="@id/btnKeyboardControl" />

    <Button
        android:id="@+id/btnKeyboardControl"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:text="@string/hidden"
        android:textSize="30sp"
        android:background="@drawable/shape_btn_sky"
        app:layout_constraintTop_toTopOf="@id/editServerPort"
        app:layout_constraintStart_toStartOf="@id/editChargePointSerialNumber" />

    <TextView
        android:id="@+id/textViewIccid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/iccid"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/editIccid"
        app:layout_constraintTop_toTopOf="@id/editRfPort" />

    <EditText
        android:id="@+id/editIccid"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewIccid"
        app:layout_constraintStart_toStartOf="@id/editChargePointSerialNumber"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewImsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:text="@string/imsi"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/editImsi"
        app:layout_constraintTop_toBottomOf="@id/textViewIccid" />

    <EditText
        android:id="@+id/editImsi"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewImsi"
        app:layout_constraintStart_toStartOf="@id/editChargePointSerialNumber"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewMeterSerialNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:text="@string/meterSerialNumber"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/editMeterSerialNumber"
        app:layout_constraintTop_toBottomOf="@id/textViewImsi" />

    <EditText
        android:id="@+id/editMeterSerialNumber"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewMeterSerialNumber"
        app:layout_constraintStart_toStartOf="@id/editChargePointSerialNumber"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textViewMeterType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:text="@string/meterType"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/editMeterType"
        app:layout_constraintTop_toBottomOf="@id/textViewMeterSerialNumber" />

    <EditText
        android:id="@+id/editMeterType"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textViewMeterType"
        app:layout_constraintStart_toStartOf="@id/editChargePointSerialNumber"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textDR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:text="@string/dr"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/editMeterType"
        app:layout_constraintTop_toBottomOf="@id/textViewMeterType" />

    <EditText
        android:id="@+id/editDR"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text_required"
        android:textSize="24sp"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/textDR"
        app:layout_constraintStart_toStartOf="@id/editChargePointSerialNumber"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <RadioGroup
        android:id="@+id/radioGrpAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginStart="-140dp"
        app:layout_constraintStart_toStartOf="@id/editConnectorPriority"
        app:layout_constraintTop_toBottomOf="@id/textViewConnectorPriority">

        <TextView
            android:id="@+id/textViewAuthMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/authMode"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioBtnMac"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:text="@string/mac"
            android:textSize="24sp"
            android:checked="false"
            android:tag="0" />

        <RadioButton
            android:id="@+id/radioBtnMemberCard"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:text="@string/memberCard"
            android:textSize="24sp"
            android:checked="false"
            android:tag="1" />

        <RadioButton
            android:id="@+id/radioBtnMacMemberCard"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:text="@string/macMemberCard"
            android:textSize="24sp"
            android:checked="true"
            android:tag="2" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGrpOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="46dp"
        app:layout_constraintStart_toStartOf="@id/radioGrpAuth"
        app:layout_constraintTop_toBottomOf="@id/radioGrpAuth">

        <TextView
            android:id="@+id/textViewOpMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opMode"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioBtnTest"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:text="@string/test"
            android:textSize="24sp"
            android:checked="true"
            android:tag="0" />

        <RadioButton
            android:id="@+id/radioBtnServer"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:text="@string/server"
            android:textSize="24sp"
            android:checked="false"
            android:tag="1" />
    </RadioGroup>

    <Button
        android:id="@+id/btnExit"
        android:layout_width="240dp"
        android:layout_height="90dp"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="10dp"
        android:text="@string/exit"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/shape_btn_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="240dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:text="@string/save"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/shape_btn_blue"
        app:layout_constraintStart_toEndOf="@id/btnExit"
        app:layout_constraintTop_toTopOf="@id/btnExit" />

    <Button
        android:id="@+id/btnRebooting"
        android:layout_width="240dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:text="@string/rebooting"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/shape_btn_red"
        app:layout_constraintStart_toEndOf="@id/btnSave"
        app:layout_constraintTop_toTopOf="@id/btnExit" />

</androidx.constraintlayout.widget.ConstraintLayout>