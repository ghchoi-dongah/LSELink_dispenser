<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="512dp"
    android:layout_height="692dp"
    tools:context=".pages.ChargingFinishFragment">

    <TextView
        android:id="@+id/textViewChargingFinishMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/chargingFinishMessage"
        android:textSize="36sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSocValue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="120dp"
        android:text="90%"
        android:textSize="80sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textViewChargingFinishMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageViewBattery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/battery5"
        app:layout_constraintTop_toTopOf="@id/textViewSocValue"
        app:layout_constraintBottom_toBottomOf="@id/textViewSocValue"
        app:layout_constraintEnd_toStartOf="@id/textViewSocValue"
        tools:ignore="contentDescription"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="450dp"
        android:layout_height="140dp"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="#EFF5FB"
        app:layout_constraintTop_toBottomOf="@id/textViewSocValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewChargingAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/electric_amount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="contentDescription" />

            <TextView
                android:id="@+id/textViewChargingAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/chargeOfAmount"
                android:textSize="30sp"
                android:letterSpacing="0.36"
                android:maxLines="1"
                app:layout_constraintLeft_toRightOf="@id/imageViewChargingAmt"
                app:layout_constraintBottom_toBottomOf="@id/imageViewChargingAmt" />

            <TextView
                android:id="@+id/textViewChargingAmtValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="0kWh"
                android:textSize="30sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/textViewChargingAmt"
                app:layout_constraintBottom_toBottomOf="@id/textViewChargingAmt"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/imageViewChargingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/time"
                app:layout_constraintStart_toStartOf="@id/imageViewChargingAmt"
                app:layout_constraintTop_toBottomOf="@id/imageViewChargingAmt"
                tools:ignore="contentDescription" />

            <TextView
                android:id="@+id/textViewChargingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chargingTime"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="@id/textViewChargingAmt"
                app:layout_constraintBottom_toBottomOf="@id/imageViewChargingTime" />

            <TextView
                android:id="@+id/textViewChargingTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textSize="30sp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/textViewChargingAmtValue"
                app:layout_constraintBottom_toBottomOf="@id/textViewChargingTime"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnCheck"
        android:layout_width="460dp"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:text="@string/check"
        android:textSize="38sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_btn_blue"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>