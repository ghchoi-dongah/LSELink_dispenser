<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="512dp"
    android:layout_height="692dp"
    tools:context=".pages.FaultFragment">

    <TextView
        android:id="@+id/textViewFaultMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/faultMessage"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewFaultCode"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="80dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="60dp"
        android:background="@drawable/shape_corner_rounded"
        android:text="ERROR MESSAGE"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/textViewFaultMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/viewFault"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="-40dp"
        android:background="@drawable/shape_oval_red"
        app:layout_constraintStart_toStartOf="@id/textViewFaultCode"
        app:layout_constraintEnd_toEndOf="@id/textViewFaultCode"
        app:layout_constraintBottom_toTopOf="@id/textViewFaultCode" />

    <TextView
        android:id="@+id/textViewFailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="!"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/viewFault"
        app:layout_constraintStart_toStartOf="@id/viewFault"
        app:layout_constraintEnd_toEndOf="@id/viewFault"
        app:layout_constraintBottom_toBottomOf="@id/viewFault" />

</androidx.constraintlayout.widget.ConstraintLayout>