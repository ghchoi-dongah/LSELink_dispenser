<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="512dp"
    android:layout_height="692dp"
    tools:context=".pages.MemberCheckFailedFragment">

    <TextView
        android:id="@+id/textViewMemberCheckFailedMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/memberCheckFailedMessage"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewMemberRegistMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/memberRegistMessage"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/textViewMemberCheckFailedMessage" />


    <ImageView
        android:id="@+id/imageViewMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/member"
        app:layout_constraintTop_toBottomOf="@id/textViewMemberCheckFailedMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="contentDescription" />

    <TextView
        android:id="@+id/textViewFailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="54dp"
        android:text="!"
        android:textSize="80sp"
        android:textColor="#535353"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/imageViewMember"
        app:layout_constraintEnd_toEndOf="@id/imageViewMember" />

</androidx.constraintlayout.widget.ConstraintLayout>