<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1024dp"
    android:layout_height="768dp"
    android:background="@color/black"
    tools:context=".pages.ScreenSaverFragment"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/textViewScreenSaverMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/screenSaverMessage"
        android:textSize="46sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.dongah.dispenser.widgets.CustomAnalogClock
        android:id="@+id/analogClock"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toBottomOf="@id/textViewScreenSaverMessage"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextClock
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:format12Hour="HH:mm:ss"
        android:format24Hour="HH:mm:ss"
        android:textSize="150sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/analogClock"
        app:layout_constraintTop_toTopOf="@id/analogClock"
        app:layout_constraintBottom_toBottomOf="@id/analogClock" />

</androidx.constraintlayout.widget.ConstraintLayout>