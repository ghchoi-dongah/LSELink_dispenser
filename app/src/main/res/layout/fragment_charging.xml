<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="512dp"
    android:layout_height="662dp"
    android:padding="5dp"
    tools:context=".pages.ChargingFragment">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/layer_list_rect"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="155dp"
        android:background="@drawable/layer_list_rect"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1"/>

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/layer_list_rect"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toEndOf="@id/view2"
        app:layout_constraintTop_toTopOf="@id/view2"/>

    <TextView
        android:id="@+id/textViewChargingMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/chargingMessage"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewCarNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/carNum"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/textViewChargingMessage" />

    <!-- 1. 배경용 -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBackground"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:indicatorSize="210dp"
        app:trackThickness="12dp"
        app:indicatorColor="#EEEEEE"
        android:progress="100"
        app:layout_constraintTop_toTopOf="@id/progressCircular"
        app:layout_constraintBottom_toBottomOf="@id/progressCircular"
        app:layout_constraintStart_toStartOf="@id/progressCircular"
        app:layout_constraintEnd_toEndOf="@id/progressCircular" />

    <!-- 2. 실제 게이지 -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressCircular"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:progress="60"
        app:indicatorSize="220dp"
        app:trackThickness="24dp"
        app:indicatorColor="@color/primary"
        app:trackCornerRadius="6dp"
        app:trackColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/textViewCarNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewSocValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="100%"
        android:textSize="58sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/progressCircular"
        app:layout_constraintStart_toStartOf="@id/progressCircular"
        app:layout_constraintEnd_toEndOf="@id/progressCircular"
        app:layout_constraintBottom_toBottomOf="@id/progressCircular"/>

    <TextView
        android:id="@+id/textViewChargingAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="80dp"
        android:text="@string/chargeOfAmount"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/view1"
        app:layout_constraintBottom_toBottomOf="@id/view1" />

    <TextView
        android:id="@+id/textViewChargingAmtValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0kWh"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewChargingAmt"
        app:layout_constraintStart_toStartOf="@id/textViewChargingAmt" />

    <TextView
        android:id="@+id/textViewChargingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="@string/chargingTime"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/textViewChargingAmt"
        app:layout_constraintStart_toEndOf="@id/textViewChargingAmt" />

    <TextView
        android:id="@+id/textViewChargingTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="00:00:00"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewChargingTime"
        app:layout_constraintStart_toStartOf="@id/textViewChargingTime"/>

    <TextView
        android:id="@+id/textViewChargingTimeRemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="@string/chargingTimeRemain"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/textViewChargingAmt"
        app:layout_constraintStart_toEndOf="@id/textViewChargingTime" />

    <TextView
        android:id="@+id/textViewChargingTimeRemainValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="00:00:00"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewChargingTimeRemain"
        app:layout_constraintStart_toStartOf="@id/textViewChargingTimeRemain"/>

    <TextView
        android:id="@+id/textViewChargingVoltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:text="@string/chargingVoltage"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/view2"
        app:layout_constraintStart_toStartOf="@id/view2" />

    <TextView
        android:id="@+id/textViewChargingVoltageValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0V"
        android:textSize="20sp"
        android:textColor="@color/black_500"
        app:layout_constraintTop_toBottomOf="@id/textViewChargingVoltage"
        app:layout_constraintStart_toStartOf="@id/textViewChargingVoltage" />

    <TextView
        android:id="@+id/textViewChargingCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/chargingCurrent"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/btnChargingStop"
        app:layout_constraintStart_toStartOf="@id/textViewChargingVoltage" />

    <TextView
        android:id="@+id/textViewChargingCurrentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0A"
        android:textSize="20sp"
        android:textColor="@color/black_500"
        app:layout_constraintTop_toBottomOf="@id/textViewChargingCurrent"
        app:layout_constraintStart_toStartOf="@id/textViewChargingCurrent" />

    <TextView
        android:id="@+id/textViewChargingPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="@string/chargingPower"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/textViewChargingVoltage"
        app:layout_constraintStart_toEndOf="@id/textViewChargingVoltage" />

    <TextView
        android:id="@+id/textViewChargingPowerValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0kW"
        android:textSize="20sp"
        android:textColor="@color/black_500"
        app:layout_constraintTop_toBottomOf="@id/textViewChargingPower"
        app:layout_constraintStart_toStartOf="@id/textViewChargingPower" />

    <TextView
        android:id="@+id/textViewRequestCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="@string/requestCurrent"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/textViewChargingCurrent"
        app:layout_constraintTop_toTopOf="@id/textViewChargingCurrent"/>

    <TextView
        android:id="@+id/textViewRequestCurrentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0A"
        android:textSize="20sp"
        android:textColor="@color/black_500"
        app:layout_constraintTop_toBottomOf="@id/textViewRequestCurrent"
        app:layout_constraintStart_toStartOf="@id/textViewRequestCurrent" />

    <TextView
        android:id="@+id/textViewLimitSoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/limitSoc"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/view3"
        app:layout_constraintTop_toTopOf="@id/textViewChargingVoltage"/>

    <TextView
        android:id="@+id/textViewLimitSocValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90%"
        android:textSize="20sp"
        android:textColor="@color/black_500"
        app:layout_constraintTop_toBottomOf="@id/textViewLimitSoc"
        app:layout_constraintStart_toStartOf="@id/textViewLimitSoc" />

    <TextView
        android:id="@+id/textViewLimitKw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="@string/limitKw"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/textViewLimitSoc"
        app:layout_constraintTop_toTopOf="@id/textViewLimitSoc"/>

    <TextView
        android:id="@+id/textViewLimitKwValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120kW"
        android:textSize="20sp"
        android:textColor="@color/black_500"
        app:layout_constraintTop_toBottomOf="@id/textViewLimitKw"
        app:layout_constraintStart_toStartOf="@id/textViewLimitKw" />

    <Button
        android:id="@+id/btnChargingStop"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="4dp"
        android:text="@string/chargingStop"
        android:textSize="24sp"
        android:textColor="@color/primary"
        android:background="@drawable/shape_btn_white_stroke_blue"
        app:backgroundTint="@null"
        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintTop_toBottomOf="@id/view3"
        app:layout_constraintEnd_toEndOf="@id/view3" />

</androidx.constraintlayout.widget.ConstraintLayout>